{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",

  "permissions": {
    "allow": [
      "Bash(python3:*)",
      "Bash(cd:*)",
      "Bash(git:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(wc:*)",
      "Read(TA-FAKE-TSHRT/**)",
      "Read(.claude/**)",
      "Read(CLAUDE.md)",
      "Read(TA-FAKE-TSHRT/docs/OFFICE_LAYOUTS.md)"
    ],
    "deny": [
      "Bash(rm -rf)",
      "Read(.env)",
      "Read(.env.*)",
      "Read(secrets/)"
    ]
  },

  "env": {
    "PYTHONPATH": "TA-FAKE-TSHRT/TA-FAKE-TSHRT/bin"
  }
}
