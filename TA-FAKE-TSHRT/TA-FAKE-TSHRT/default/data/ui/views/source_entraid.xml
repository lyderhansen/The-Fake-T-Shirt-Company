<dashboard version="1.1" theme="dark">
  <label>Entra ID</label>
  <description>Azure Active Directory sign-in and audit logs</description>

  <fieldset submitButton="false">
    <input type="time" token="time" searchWhenChanged="true">
      <label>Time Range</label>
      <default>
        <earliest>1735689600</earliest>
        <latest>1736899200</latest>
      </default>
    </input>
  </fieldset>

  <row>
    <panel>
      <html>
        <div style="padding: 20px; background: linear-gradient(135deg, #1a1a1a 0%, #1f2d2d 100%); border-radius: 8px; border-left: 4px solid #0078d4;">
          <h2 style="color: #0078d4; margin-top: 0;">Entra ID (Azure AD)</h2>
          <p style="color: #ccc; font-size: 1.1em;">Azure Active Directory sign-in and audit logs. Tracks user authentication and administrative changes.</p>
          <div style="display: flex; gap: 30px; margin-top: 15px; flex-wrap: wrap;">
            <div style="background: #333; padding: 10px 15px; border-radius: 5px;">
              <span style="color: #999;">Sign-in:</span> <code style="color: #5CC05C;">FAKE:azure:aad:signin</code>
            </div>
            <div style="background: #333; padding: 10px 15px; border-radius: 5px;">
              <span style="color: #999;">Audit:</span> <code style="color: #5CC05C;">FAKE:azure:aad:audit</code>
            </div>
            <div style="background: #333; padding: 10px 15px; border-radius: 5px;">
              <span style="color: #999;">Tenant:</span> <strong style="color: #fff;">theFakeTshirtCompany.com</strong>
            </div>
          </div>
        </div>
      </html>
    </panel>
  </row>

  <row>
    <panel>
      <title>Sign-in Events Over Time</title>
      <chart>
        <search>
          <query>| tstats count where index=fake_tshrt sourcetype="FAKE:azure:aad:signin" by _time span=1h</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="charting.chart">area</option>
        <option name="charting.drilldown">none</option>
        <option name="height">250</option>
        <option name="charting.fieldColors">{"count": 0x0078d4}</option>
      </chart>
    </panel>
    <panel>
      <title>Sign-in Status</title>
      <chart>
        <search>
          <query>index=fake_tshrt sourcetype="FAKE:azure:aad:signin"
| eval status=if(status.errorCode=0, "Success", "Failed")
| stats count by status</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">none</option>
        <option name="height">250</option>
      </chart>
    </panel>
  </row>

  <row>
    <panel>
      <title>Total Sign-ins</title>
      <single>
        <search>
          <query>| tstats count where index=fake_tshrt sourcetype="FAKE:azure:aad:signin"</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="colorMode">block</option>
        <option name="rangeColors">["0x0078d4","0x0078d4"]</option>
        <option name="useColors">1</option>
      </single>
    </panel>
    <panel>
      <title>Unique Users</title>
      <single>
        <search>
          <query>index=fake_tshrt sourcetype="FAKE:azure:aad:signin" | stats dc(userPrincipalName)</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="colorMode">block</option>
        <option name="rangeColors">["0x5CC05C","0x5CC05C"]</option>
        <option name="useColors">1</option>
      </single>
    </panel>
    <panel>
      <title>Failed Sign-ins</title>
      <single>
        <search>
          <query>index=fake_tshrt sourcetype="FAKE:azure:aad:signin" status.errorCode!=0 | stats count</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="colorMode">block</option>
        <option name="rangeColors">["0xdc4e41","0xdc4e41"]</option>
        <option name="useColors">1</option>
      </single>
    </panel>
    <panel>
      <title>Audit Events</title>
      <single>
        <search>
          <query>| tstats count where index=fake_tshrt sourcetype="FAKE:azure:aad:audit"</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="colorMode">block</option>
        <option name="rangeColors">["0xf8be34","0xf8be34"]</option>
        <option name="useColors">1</option>
      </single>
    </panel>
  </row>

  <row>
    <panel>
      <title>Key Fields - Sign-in</title>
      <html>
        <div style="background: #1a1a1a; padding: 15px; border-radius: 5px;">
          <table style="width: 100%; border-collapse: collapse;">
            <tr style="background: #2a2a2a;">
              <th style="padding: 8px; text-align: left; border: 1px solid #444;">Field</th>
              <th style="padding: 8px; text-align: left; border: 1px solid #444;">Description</th>
            </tr>
            <tr><td style="padding: 8px; border: 1px solid #444; color: #5CC05C;">userPrincipalName</td><td style="padding: 8px; border: 1px solid #444;">User email</td></tr>
            <tr><td style="padding: 8px; border: 1px solid #444; color: #5CC05C;">ipAddress</td><td style="padding: 8px; border: 1px solid #444;">Client IP</td></tr>
            <tr><td style="padding: 8px; border: 1px solid #444; color: #5CC05C;">location.city/country</td><td style="padding: 8px; border: 1px solid #444;">Geographic location</td></tr>
            <tr><td style="padding: 8px; border: 1px solid #444; color: #5CC05C;">appDisplayName</td><td style="padding: 8px; border: 1px solid #444;">Application used</td></tr>
            <tr><td style="padding: 8px; border: 1px solid #444; color: #5CC05C;">status.errorCode</td><td style="padding: 8px; border: 1px solid #444;">0=success, other=failure</td></tr>
            <tr><td style="padding: 8px; border: 1px solid #444; color: #5CC05C;">conditionalAccessStatus</td><td style="padding: 8px; border: 1px solid #444;">CA policy result</td></tr>
            <tr><td style="padding: 8px; border: 1px solid #444; color: #5CC05C;">demo_id</td><td style="padding: 8px; border: 1px solid #444;">Scenario identifier</td></tr>
          </table>
        </div>
      </html>
    </panel>
    <panel>
      <title>Compromised Users (Exfil)</title>
      <html>
        <div style="background: #1a1a1a; padding: 15px; border-radius: 5px;">
          <h4 style="color: #dc4e41; margin-top: 0;">Attack Scenario Users</h4>
          <table style="width: 100%; border-collapse: collapse;">
            <tr style="background: #2a2a2a;">
              <th style="padding: 8px; text-align: left; border: 1px solid #444;">User</th>
              <th style="padding: 8px; text-align: left; border: 1px solid #444;">Role</th>
              <th style="padding: 8px; text-align: left; border: 1px solid #444;">Status</th>
            </tr>
            <tr>
              <td style="padding: 8px; border: 1px solid #444;">jessica.brown</td>
              <td style="padding: 8px; border: 1px solid #444;">IT Admin</td>
              <td style="padding: 8px; border: 1px solid #444; color: #f8be34;">Initial compromise</td>
            </tr>
            <tr>
              <td style="padding: 8px; border: 1px solid #444;">alex.miller</td>
              <td style="padding: 8px; border: 1px solid #444;">Finance</td>
              <td style="padding: 8px; border: 1px solid #444; color: #dc4e41;">Primary target</td>
            </tr>
          </table>
          <p style="color: #999; margin-top: 15px;">Look for sign-ins from Germany (185.220.101.42)</p>
        </div>
      </html>
    </panel>
  </row>

  <row>
    <panel>
      <title>Top Users</title>
      <table>
        <search>
          <query>index=fake_tshrt sourcetype="FAKE:azure:aad:signin"
| stats count by userPrincipalName
| sort - count
| head 15</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="drilldown">none</option>
      </table>
    </panel>
    <panel>
      <title>Sign-ins by Location</title>
      <table>
        <search>
          <query>index=fake_tshrt sourcetype="FAKE:azure:aad:signin"
| stats count by location.country
| sort - count</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="drilldown">none</option>
      </table>
    </panel>
    <panel>
      <title>Top Applications</title>
      <table>
        <search>
          <query>index=fake_tshrt sourcetype="FAKE:azure:aad:signin"
| stats count by appDisplayName
| sort - count
| head 10</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="drilldown">none</option>
      </table>
    </panel>
  </row>

  <row>
    <panel>
      <title>Use Cases</title>
      <html>
        <div style="background: #1a1a1a; padding: 20px; border-radius: 5px;">
          <h3 style="color: #5CC05C; margin-top: 0;">Common SPL Queries</h3>

          <h4 style="color: #ccc; margin-top: 20px;">Failed Sign-ins</h4>
          <pre style="background: #0d0d0d; padding: 10px; border-radius: 3px; overflow-x: auto; color: #5CC05C;">index=fake_tshrt sourcetype="FAKE:azure:aad:signin" status.errorCode!=0
| stats count by userPrincipalName, status.errorCode
| sort - count</pre>

          <h4 style="color: #ccc; margin-top: 20px;">Sign-ins from Unusual Locations</h4>
          <pre style="background: #0d0d0d; padding: 10px; border-radius: 3px; overflow-x: auto; color: #5CC05C;">index=fake_tshrt sourcetype="FAKE:azure:aad:signin" location.country!="United States"
| table _time, userPrincipalName, ipAddress, location.city, location.country</pre>

          <h4 style="color: #ccc; margin-top: 20px;">Compromised User Activity</h4>
          <pre style="background: #0d0d0d; padding: 10px; border-radius: 3px; overflow-x: auto; color: #5CC05C;">index=fake_tshrt sourcetype="FAKE:azure:aad:signin"
  (userPrincipalName="jessica.brown*" OR userPrincipalName="alex.miller*")
| table _time, userPrincipalName, ipAddress, location.country, appDisplayName</pre>

          <h4 style="color: #ccc; margin-top: 20px;">Threat Actor Sign-ins</h4>
          <pre style="background: #0d0d0d; padding: 10px; border-radius: 3px; overflow-x: auto; color: #5CC05C;">index=fake_tshrt sourcetype="FAKE:azure:aad:signin" ipAddress=185.220.101.42
| table _time, userPrincipalName, appDisplayName</pre>
        </div>
      </html>
    </panel>
  </row>

  <row>
    <panel>
      <title>Sample Events</title>
      <table>
        <search>
          <query>index=fake_tshrt sourcetype="FAKE:azure:aad:*"
| table _time, sourcetype, userPrincipalName, ipAddress, location.country, appDisplayName, status.errorCode, demo_id
| head 20</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
</dashboard>
