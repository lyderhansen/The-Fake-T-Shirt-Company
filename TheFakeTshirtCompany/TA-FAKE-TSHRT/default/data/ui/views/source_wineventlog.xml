<dashboard version="1.1" theme="dark">
  <label>Windows Event Log</label>
  <description>Windows Security, System, and Application events</description>

  <fieldset submitButton="false">
    <input type="time" token="time" searchWhenChanged="true">
      <label>Time Range</label>
      <default>
        <earliest>1735689600</earliest>
        <latest>1736899200</latest>
      </default>
    </input>
  </fieldset>

  <row>
    <panel>
      <html>
        <div style="padding: 20px; background: linear-gradient(135deg, #1a1a1a 0%, #1f1f2d 100%); border-radius: 8px; border-left: 4px solid #0078d4;">
          <h2 style="color: #0078d4; margin-top: 0;">Windows Event Log</h2>
          <p style="color: #ccc; font-size: 1.1em;">Security, System, and Application events from Windows servers and workstations in XML format.</p>
          <div style="display: flex; gap: 30px; margin-top: 15px; flex-wrap: wrap;">
            <div style="background: #333; padding: 10px 15px; border-radius: 5px;">
              <span style="color: #999;">Sourcetype:</span> <code style="color: #5CC05C;">FAKE:WinEventLog</code>
            </div>
            <div style="background: #333; padding: 10px 15px; border-radius: 5px;">
              <span style="color: #999;">Format:</span> <strong style="color: #fff;">XML</strong>
            </div>
            <div style="background: #333; padding: 10px 15px; border-radius: 5px;">
              <span style="color: #999;">Channels:</span> <strong style="color: #fff;">Security, System, Application</strong>
            </div>
          </div>
        </div>
      </html>
    </panel>
  </row>

  <row>
    <panel>
      <title>Events by Channel</title>
      <chart>
        <search>
          <query>index=fake_tshrt sourcetype="FAKE:WinEventLog"
| stats count by Channel
| sort - count</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">none</option>
        <option name="height">250</option>
      </chart>
    </panel>
    <panel>
      <title>Events Over Time</title>
      <chart>
        <search>
          <query>| tstats count where index=fake_tshrt sourcetype="FAKE:WinEventLog" by _time span=1h</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="charting.chart">area</option>
        <option name="charting.drilldown">none</option>
        <option name="height">250</option>
        <option name="charting.fieldColors">{"count": 0x0078d4}</option>
      </chart>
    </panel>
  </row>

  <row>
    <panel>
      <title>Total Events</title>
      <single>
        <search>
          <query>| tstats count where index=fake_tshrt sourcetype="FAKE:WinEventLog"</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="colorMode">block</option>
        <option name="rangeColors">["0x0078d4","0x0078d4"]</option>
        <option name="useColors">1</option>
      </single>
    </panel>
    <panel>
      <title>Unique Hosts</title>
      <single>
        <search>
          <query>| tstats dc(host) where index=fake_tshrt sourcetype="FAKE:WinEventLog"</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="colorMode">block</option>
        <option name="rangeColors">["0x5CC05C","0x5CC05C"]</option>
        <option name="useColors">1</option>
      </single>
    </panel>
    <panel>
      <title>Failed Logons (4625)</title>
      <single>
        <search>
          <query>index=fake_tshrt sourcetype="FAKE:WinEventLog" EventID=4625 | stats count</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="colorMode">block</option>
        <option name="rangeColors">["0xdc4e41","0xdc4e41"]</option>
        <option name="useColors">1</option>
      </single>
    </panel>
    <panel>
      <title>Defender Alerts (1116)</title>
      <single>
        <search>
          <query>index=fake_tshrt sourcetype="FAKE:WinEventLog" EventID=1116 | stats count</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="colorMode">block</option>
        <option name="rangeColors">["0xf8be34","0xf8be34"]</option>
        <option name="useColors">1</option>
      </single>
    </panel>
  </row>

  <row>
    <panel>
      <title>Security Event IDs</title>
      <html>
        <div style="background: #1a1a1a; padding: 15px; border-radius: 5px;">
          <table style="width: 100%; border-collapse: collapse;">
            <tr style="background: #2a2a2a;">
              <th style="padding: 8px; text-align: left; border: 1px solid #444;">EventID</th>
              <th style="padding: 8px; text-align: left; border: 1px solid #444;">Description</th>
            </tr>
            <tr><td style="padding: 8px; border: 1px solid #444; color: #5CC05C;">4624</td><td style="padding: 8px; border: 1px solid #444;">Successful logon</td></tr>
            <tr><td style="padding: 8px; border: 1px solid #444; color: #dc4e41;">4625</td><td style="padding: 8px; border: 1px solid #444;">Failed logon</td></tr>
            <tr><td style="padding: 8px; border: 1px solid #444; color: #5CC05C;">4634</td><td style="padding: 8px; border: 1px solid #444;">Logoff</td></tr>
            <tr><td style="padding: 8px; border: 1px solid #444; color: #5CC05C;">4688</td><td style="padding: 8px; border: 1px solid #444;">Process creation</td></tr>
            <tr><td style="padding: 8px; border: 1px solid #444; color: #f8be34;">4697</td><td style="padding: 8px; border: 1px solid #444;">Service installed</td></tr>
            <tr><td style="padding: 8px; border: 1px solid #444; color: #dc4e41;">1116</td><td style="padding: 8px; border: 1px solid #444;">Defender malware detected</td></tr>
            <tr><td style="padding: 8px; border: 1px solid #444; color: #f8be34;">17883</td><td style="padding: 8px; border: 1px solid #444;">SQL non-yielding process</td></tr>
          </table>
        </div>
      </html>
    </panel>
    <panel>
      <title>Scenario Events</title>
      <html>
        <div style="background: #1a1a1a; padding: 15px; border-radius: 5px;">
          <h4 style="color: #dc4e41; margin-top: 0;">Ransomware Attempt</h4>
          <ul style="color: #ccc; line-height: 1.8;">
            <li>4688 - WINWORD.EXE spawns svchost_update.exe</li>
            <li>4697 - Malicious service installed</li>
            <li>4625 - Lateral movement failed logons</li>
            <li>1116 - Defender quarantine</li>
          </ul>

          <h4 style="color: #f8be34; margin-top: 15px;">CPU Runaway</h4>
          <ul style="color: #ccc; line-height: 1.8;">
            <li>17883 - SQL non-yielding on CPU</li>
            <li>833 - I/O requests taking too long</li>
            <li>17148 - KILL command issued</li>
          </ul>
        </div>
      </html>
    </panel>
  </row>

  <row>
    <panel>
      <title>Top Event IDs</title>
      <table>
        <search>
          <query>index=fake_tshrt sourcetype="FAKE:WinEventLog"
| stats count by EventID
| sort - count
| head 15</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="drilldown">none</option>
      </table>
    </panel>
    <panel>
      <title>Events by Host</title>
      <table>
        <search>
          <query>index=fake_tshrt sourcetype="FAKE:WinEventLog"
| stats count by Computer
| sort - count
| head 10</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="drilldown">none</option>
      </table>
    </panel>
    <panel>
      <title>Events by Scenario</title>
      <table>
        <search>
          <query>index=fake_tshrt sourcetype="FAKE:WinEventLog" demo_id=*
| stats count by demo_id
| sort - count</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="drilldown">none</option>
      </table>
    </panel>
  </row>

  <row>
    <panel>
      <title>Use Cases</title>
      <html>
        <div style="background: #1a1a1a; padding: 20px; border-radius: 5px;">
          <h3 style="color: #5CC05C; margin-top: 0;">Common SPL Queries</h3>

          <h4 style="color: #ccc; margin-top: 20px;">Failed Logons</h4>
          <pre style="background: #0d0d0d; padding: 10px; border-radius: 3px; overflow-x: auto; color: #5CC05C;">index=fake_tshrt sourcetype="FAKE:WinEventLog" EventID=4625
| stats count by TargetUserName, IpAddress
| sort - count</pre>

          <h4 style="color: #ccc; margin-top: 20px;">Process Creation (Threat Hunting)</h4>
          <pre style="background: #0d0d0d; padding: 10px; border-radius: 3px; overflow-x: auto; color: #5CC05C;">index=fake_tshrt sourcetype="FAKE:WinEventLog" EventID=4688
| table _time, Computer, NewProcessName, ParentProcessName, CommandLine</pre>

          <h4 style="color: #ccc; margin-top: 20px;">Service Installation</h4>
          <pre style="background: #0d0d0d; padding: 10px; border-radius: 3px; overflow-x: auto; color: #5CC05C;">index=fake_tshrt sourcetype="FAKE:WinEventLog" EventID=4697
| table _time, Computer, ServiceName, ServiceFileName</pre>

          <h4 style="color: #ccc; margin-top: 20px;">Defender Alerts</h4>
          <pre style="background: #0d0d0d; padding: 10px; border-radius: 3px; overflow-x: auto; color: #5CC05C;">index=fake_tshrt sourcetype="FAKE:WinEventLog" EventID=1116
| table _time, Computer, ThreatName, Path, Action</pre>
        </div>
      </html>
    </panel>
  </row>

  <row>
    <panel>
      <title>Sample Events</title>
      <table>
        <search>
          <query>index=fake_tshrt sourcetype="FAKE:WinEventLog"
| table _time, Computer, Channel, EventID, TargetUserName, IpAddress, demo_id
| head 20</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
</dashboard>
